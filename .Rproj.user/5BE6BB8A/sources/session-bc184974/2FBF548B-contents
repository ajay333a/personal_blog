library(tidyverse)
library(readxl)


Thesisdata <- read_excel("F:/R Language/Thesisdata.xlsx")
View(Thesisdata)
ths_data <- Thesisdata
ths_data$Treatment <- as_factor(ths_data$Treatment)



?n_distinct
View(ths_data)
y <- ths_data %>% distinct(Species)
y

bar_plot_species <- function(Plant){
  ths_data |> filter(Species == Plant) |> 
    ggplot(aes(Treatment, num_roots_n, fill = Treatment)) + geom_col() + 
    labs(title = "Average number of roots per leaf", 
         y = "Number of roots", x= Plant ) + theme_bw() +
    theme(legend.position = "top")
}


bar_plot_species("Conidium verigatum")
bar_plot_species(y)

